# ---Lanuchers---
# Spawn a termnal
alt + Return 
	alacritty

# ScreenShot
alt + s + {_, a}
	maim { , --select} |  xclip -selection clipboard -target image/png

# Aplication launcher
alt + space
	sh ~/.config/rofi/launcher/launcher.sh &

# Power menue
alt + shift + q
	sh ~/.config/rofi/powermenu/powermenu.sh &

# Reload keybindgs
alt + r
	pkill -USR1 -x sxhkd

# Restart bspwm
alt + shift + r
	bspc wm -r

# volume control
alt + {bracketleft, bracketright, backslash}
    amixer set Master {5%-, 5%+, toggle} > /dev/null 2>&1; pkill -USR10 -x dwmblocks

# Fast acsess
super + {b, s, d, t, g, r, e}
	/home/zerobors/.config/i3/scripts/focus_app.sh {chromium, shotcut, discord, telegram, gimp, obs, thunar} 2> /dev/null 


# ---Window&Layouts--
# Toggle node modes 
alt + shift + {o,t,p}
    bspc node -t {~floating,~tiled,~pseudo_tiled}

# Fullscreen
alt + f
	bspc node -t ~fullscreen


# Foucas last desktop
alt + Tab
	bspc desktop -f last

# Kill node
alt + q
	bspc node -c

# Navgation
alt + j
    bspc node -f south || bspc node -f next.local.window
alt + k
    bspc node -f north || bspc node -f prev.local.window
alt + {h,l}
    bspc node -f {west,east}

# scratchpad toggle
alt + z
	~/.config/bspwm/scripts/scratchpad_toggle

# move the node in the given direction
alt + shift + {h,j,k,l}
	 bspc node -s {west,south,north,east} 

# focus descktop or send node to the given desktop
alt + {_,shift + }{1-7}
	bspc {desktop -f,node -d} '^{1-7}'

# Switching descktop mode
alt + m
	bspc desktop -l next

# expand a window by moving one of its side outward
super + {h,j,k,l}
	bspc node -z {left -30 0,top 0 30,top 0 -30,left 30 0}

# set the node flags
alt + {shift + minus,x,y}
	bspc node -g {hidden,locked,sticky}

# Switch foucse to float
alt + o
	bspc node  -f next.!tiled

alt + b
   polybar-msg cmd toggle && bspc config top_padding $(bspc config top_padding | grep -q "27" && echo 0 || echo 27)

